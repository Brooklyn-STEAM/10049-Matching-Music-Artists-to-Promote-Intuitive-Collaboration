<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body class="bg-[#F5EEDD] text-[#06202B] font-sans antialiased">

  {% include "navbar.html.jinja"%}







{% for message in get_flashed_messages() %}
<li>{{message}}</li>
{%endfor%}

 <main class="flex-1 flex items-start justify-center pt-28">
<div class="w-150 h-[430px] rounded-3xl 
                      bg-gradient-to-br from-[#7AE2CF] to-[#077A7D] 
                      shadow-xl place-content-center">
 <form method="post" class="p-6 space-y-4 text-xl" action="/register">
    <label> Username</label>
    <input name="name" required class="w-full px-4 py-3 rounded-xl border border-[#06202B]/30 text-[#06202B] placeholder-[#F5EEDD]/60">

  <label>Email</label>
    <input name="email" required type="email" class="w-full px-4 py-3 rounded-xl border border-[#06202B]/30 text-[#06202B] placeholder-[#F5EEDD]/60">

    <label> Password </label>
    <input name="password" required type="password" class="w-full px-4 py-3 rounded-xl border border-[#06202B]/30 text-[#06202B] placeholder-[#F5EEDD]/60">

      <label> Confirm Password </label>
    <input name="confirm_password" required type="password" class="w-full px-4 py-3 rounded-xl border border-[#06202B]/30 text-[#06202B] placeholder-[#F5EEDD]/60">

<br>
<br>
<button type="submit" class="w-full px-4 py-3 rounded-xl bg-[#077A7D] text-white font-medium 
                         hover:bg-[#06202B] transition">Register</button>
 
    </form>
</div>
 </main>
</body>


      
 

    </main>
  </body>
</html>